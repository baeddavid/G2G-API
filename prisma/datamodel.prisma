type Bathroom {
    id: ID! @id
    createdAt: DateTime! @createdAt
    businessName: String @default(value: "Public Restroom")
    description: String!
    address: String!
    lat: Float!
    lng: Float!
    purchaseRequired: Boolean! @default(value: false)
    genderNeutral: Boolean! @default(value: false)
    accessibleStall: Boolean! @default(value: false)
    singleOccupancy: Boolean! @default(value: false)
    createdBy: User @relation(name: "Creator")
    bookmarkedBy: [User!]! @relation(name: "Saver")
    reviews: [Review!]!
}

type Review {
    id: ID! @id
    title: String!
    description: String!
    createdBy: User
    bathroomParent: Bathroom
}

type User {
    id: ID! @id
    name: String!
    email: String!
    password: String!
    bathrooms: [Bathroom!]! @relation(name: "Creator")
    reviews: [Review!]!
    bookmark: [Bathroom!]! @relation(name: "Saver")
}