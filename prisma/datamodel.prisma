  type Bathroom {
    id: ID! @id
    createdAt: DateTime! @createdAt
    businessName: String @default(value: "Public Restroom")
    description: String!
    address: String!
    lat: Float!
    lng: Float!
    purchaseRequired: Boolean! @default(value: false)
    genderNeutral: Boolean! @default(value: false)
    accessibleStall: Boolean! @default(value: false)
    singleOccupancy: Boolean! @default(value: false)
    postedBy: User 
    reviews: [Review!]!
}

type Review {
    id: ID! @id
    title: String!
    description: String!
    createdBy: User!
    bathroom: Bathroom
}

type User {
    id: ID! @id
    name: String!
    email: String! @unique
    password: String!
    bathrooms: [Bathroom!]! 
    reviews: [Review!]!
}